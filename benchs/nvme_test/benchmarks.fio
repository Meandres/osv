[global]
thread=1
ioengine=libaio
direct=1
verify=0
time_based=1
ramp_time=120
runtime=300
directory=/scratch/ilya/udos/disk
size=20G
numjobs=1
iodepth=128

[small-seqwrite]
rw=write
bs=512

[medium-seqwrite]
rw=write
bs=4k

[large-seqwrite]
rw=write
bs=16k

[small-mixed]
rw=randrw
bs=512

[medium-mixed]
rw=randrw
bs=4k

[large-mixed]
rw=randrw
bs=16k
